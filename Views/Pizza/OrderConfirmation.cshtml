@model WebAppPizza.Models.ConfirmOrder

@{
    ViewData["Title"] = "OrderConfirmation";
}

<h1>Order Confirmation🛒 </h1>

<p>Order ID: @Model.OrderId</p>
<p>Pizza: @Model.Pizza</p>
<p>Quantity: @Model.Quantity</p>
<p>Amount: @Model.Amount</p>

<form asp-action="Payment" asp-controller="Pizza">
    <button type="submit">Make Payment</button>
</form>

<form asp-action="Cancel" asp-controller="Pizza">
    <button type="submit">Cancel Order</button>
</form>